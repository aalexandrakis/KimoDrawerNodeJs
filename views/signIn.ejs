<!DOCTYPE html>
  <html>
    <head>
      <title><%= title %></title>
      <link rel='stylesheet' href='/sb-admin/css/bootstrap.css' />
      <link rel='stylesheet' href='sb-admin/css/sb-admin-2.css' />
      <script src="/javascripts/jquery.js"></script>
      <script src="/sb-admin/js/bootstrap.js"></script>
      <script src="/sb-admin/js/sb-admin-2.js"></script>

    </head>
    <body> 
    	      <div class="container">
		          <div class="row">
		            <div class="col-md-4 col-md-offset-4">
		              <div class="login-panel panel panel-default">
		              	<div class="panel-heading">
		              		<%= formHeader %>
		              	</div>
		              	<div class=panel-body>
			                <form class="form-horizontal" method="POST" action="<%= postForm %>">
			                      <fieldset>
			                              <% fields.forEach(function(field, index){ %>
			                                  <div class= "<% if (field.error != '') { %> form-group has-error <% } else { %>  form-group <% } %>">
			                                    <label class="col-lg-2 control-label"> <%= field.description%> </label>
			                                    <div class="col-lg-10">
			                                      <input class="form-control" name="<%= field.name%>" placeholder="<%= field.placeHolder%>" type="<%= field.inputType %>" value="<%= field.value %>">
			                                      <label class="control-label"><%= field.error %></label>
			                                    </div>
			                                  </div>
			                              <%});%>
			                           <div>
			                                <button type="submit" class="btn btn-lg btn-block btn-success" ><%= buttonText %></button>
			                           </div>
			                      </fieldset>         
			                </form>
			              </div>  
		            </div>
		          </div>
		        </div>
		        <% if (errorGeneric != "" ) { %>
		            <div class="row">
		              <div class="col-lg-6" style="margin-left: 25%;">
		                <div class="bs-component">
		                    <div class="alert alert-dismissable alert-danger">
		                      <button type="button" class="close" data-dismiss="alert">×</button>
		                      <strong><%= errorGeneric %></strong> 
		                    </div>
		                    <div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div>
		                </div>
		              </div>
		            </div>
		         <% } %>   
		         <% if (successMessage != "" ) { %>
		            <div class="row">
		              <div class="col-lg-6" style="margin-left: 25%;">
		                <div class="bs-component">
		                  <div class="alert alert-dismissable alert-success">
		                    <button type="button" class="close" data-dismiss="alert">×</button>
		                    <strong> <%= successMessage %></strong>
		                  </div>
		                  <div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div>
		                </div>
		              </div>
		            </div>
		          <% } %>
   			</div>       
		      
  </body>
</html>